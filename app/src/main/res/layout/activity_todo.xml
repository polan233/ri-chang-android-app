<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TodoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11/13 周日"
        android:textColor="@color/white"
        android:padding="3dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/top_date_bg"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
         />
    <LinearLayout
        android:id="@+id/ll_contain_todo_selectors"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_benri"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="本日"/>
            <RadioButton
                android:id="@+id/rb_benzhou"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="本周"/>
            <RadioButton
                android:id="@+id/rb_benyue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="本月"/>
            <RadioButton
                android:id="@+id/rb_quanbu"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="全部"/>
        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/theme_color"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/theme_color"/>
    <LinearLayout
        android:id="@+id/ll_contain_todo_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:text="删除已完成"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:text="添加新待办" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/theme_color"/>
    <LinearLayout
        android:id="@+id/ll_nav"
        android:layout_weight="1"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_todo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/nav_todo_focused"
            android:text="待办"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="true" />
        <TextView
            android:id="@+id/tv_eat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@drawable/nav_eat_unfocused"
            android:text="饮食"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="true" />
        <TextView
            android:id="@+id/tv_habit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@drawable/nav_habit_unfocused"
            android:text="习惯"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="true" />
        <TextView
            android:id="@+id/tv_dairy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@drawable/nav_dairy_unfocused"
            android:text="日记"
            android:textAlignment="center"
            android:gravity="center"
            android:focusable="true" />
    </LinearLayout>


</LinearLayout>